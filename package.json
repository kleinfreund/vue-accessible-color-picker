{
	"name": "vue-accessible-color-picker",
	"version": "4.1.4",
	"license": "MIT",
	"description": "Color picker component for Vue.js",
	"author": {
		"name": "Philipp Rudloff",
		"url": "https://kleinfreund.de"
	},
	"homepage": "https://vue-accessible-color-picker.netlify.app",
	"repository": {
		"type": "git",
		"url": "https://github.com/kleinfreund/vue-accessible-color-picker.git"
	},
	"bugs": {
		"url": "https://github.com/kleinfreund/vue-accessible-color-picker/issues"
	},
	"keywords": [
		"vue",
		"color",
		"picker",
		"component",
		"hsl",
		"hwb"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"default": "./dist/vue-accessible-color-picker.js"
		},
		"./unstyled": {
			"types": "./types/index.d.ts",
			"default": "./dist/vue-accessible-color-picker-unstyled.js"
		},
		"./types/index.d.ts": "./types/index.d.ts"
	},
	"main": "./dist/vue-accessible-color-picker.js",
	"module": "./dist/vue-accessible-color-picker.js",
	"types": "./types/index.d.ts",
	"files": [
		"dist/vue-accessible-color-picker.js",
		"dist/vue-accessible-color-picker-unstyled.js",
		"types/index.d.ts"
	],
	"sideEffects": false,
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "rollup --config",
		"start": "vite",
		"test": "vitest run --coverage",
		"lint:code": "eslint --ext .js,.vue .",
		"lint:code:fix": "npm run lint:code -- --fix",
		"lint:lockfile": "lockfile-lint --path package-lock.json --validate-hosts --allowed-hosts npm",
		"lint:package": "publint",
		"release": "semantic-release",
		"prepare": "husky install",
		"prepublishOnly": "npm run build"
	},
	"peerDependencies": {
		"vue": "^3.2.x"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.2",
		"@commitlint/config-conventional": "^18.4.2",
		"@rollup/plugin-terser": "^0.4.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.2.3",
		"@semantic-release/npm": "^11.0.1",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@vitejs/plugin-vue": "^4.5.0",
		"@vitest/coverage-v8": "^0.34.6",
		"@vue/test-utils": "^2.4.2",
		"eslint": "^8.54.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-vue": "^9.18.1",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"lockfile-lint": "^4.12.1",
		"postcss": "^8.4.31",
		"publint": "^0.2.5",
		"rimraf": "^5.0.5",
		"rollup": "^3.29.4",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-vue": "^6.0.0",
		"semantic-release": "^22.0.8",
		"standard": "^17.1.0",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	}
}
