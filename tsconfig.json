{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"sourceMap": false,
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "Bundler",
		"lib": [
			"dom",
			"dom.iterable",
			"es2022"
		],
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"strictNullChecks": true,
		"jsx": "preserve"
	},
	"include": [
		"./src"
	]
}
